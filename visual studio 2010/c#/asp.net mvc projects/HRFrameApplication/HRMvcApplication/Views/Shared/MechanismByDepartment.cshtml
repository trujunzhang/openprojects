@model HRMvcApplication.Models.MechanismByDepartModel



<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"> </script>
<script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"> </script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"> </script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"> </script>

<style type="text/css">

    select {
        width: 130px;    
    }    

</style>

<script language="javascript">

    function dropdownchange(value) {

        $("form").submit();
    }    
</script>

<div >
    @using (Html.BeginForm("MechanismByDepartment","Shared",new{id="wanghao"}))
    {
        <div style="float: left;">
            机构:
            @Html.DropDownList(Model.MechanismName, Model.MechanismList, "select...",new { onchange="dropdownchange(0);" })			            
            部门:
            @Html.DropDownList(Model.DepartmentName, Model.DepartmentList, "select...",new { onchange="dropdownchange(1);" })
            职位:
            @Html.DropDownList(Model.PositionName, Model.PositionList, "select...",new { onchange="dropdownchange(2);" })                
        </div>
    }
</div>






